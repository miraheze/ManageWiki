	},
	"devDependencies": {
		"eslint-config-wikimedia": "0.22.1",
		"grunt-banana-checker": "0.9.0",
		"stylelint-config-idiomatic-order": "8.1.0",
		"stylelint-config-wikimedia": "0.11.1"
	}
}
